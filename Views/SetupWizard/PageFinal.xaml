<Page x:Class="livelywpf.Views.SetupWizard.PageFinal"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:livelywpf.Views.SetupWizard"
      xmlns:p = "clr-namespace:livelywpf.Properties"    
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="PageFinal">

    <Grid>
        <DockPanel >
            <Image DockPanel.Dock="Left" Source="pack://application:,,,/Resources/tutorial_systray.png" Stretch="Uniform" Margin="0, 5, 0, 0"/>
            <StackPanel Margin="10,10,0,0">
                <TextBlock TextWrapping="Wrap" FontWeight="Bold" FontSize="25" Text="{x:Static p:Resources.TextCompleted}"/>
                <TextBlock TextWrapping="Wrap" Text="{x:Static p:Resources.DescriptionMinimizedTray}"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
